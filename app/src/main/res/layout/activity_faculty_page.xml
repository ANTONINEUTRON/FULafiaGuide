<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FacultyPage"
    android:background="#f2f2f2">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/facultyName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Faculty and Departments"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="#FFAF6A03"
            android:padding="8dp"
            android:textSize="18sp"
            android:textStyle="bold"
            app:fontFamily="serif" />
        <ImageView
            android:id="@+id/facultyImage"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="fitXY"
            android:src="@mipmap/ic_launcher"
            />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/faculty_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:scrollbars="none" />


    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:layout_marginBottom="50dp"
            >
            <TextView
                android:id="@+id/home"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:background="@drawable/circle_brown_border"
                android:fontFamily="sans-serif-condensed-light"
                android:padding="5dp"
                android:text="@string/home"
                android:textAlignment="center"
                android:textSize="12sp"
                android:textColor="#CAA649"
                app:fontFamily="sans-serif-condensed-light"/>

            <TextView
                android:id="@+id/faculty"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:background="@drawable/circle_brown_border"
                android:fontFamily="sans-serif-condensed-light"
                app:fontFamily="sans-serif-condensed-light"
                android:layout_marginLeft="4dp"
                android:padding="5dp"
                android:text="@string/faculty"
                android:textAlignment="center"
                android:textSize="12sp"
                android:textColor="#CAA649" />
            <TextView
                android:id="@+id/dept"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:background="@drawable/circle_brown_back"
                android:fontFamily="sans-serif-condensed-light"
                app:fontFamily="sans-serif-condensed-light"
                android:layout_marginLeft="4dp"
                android:padding="5dp"
                android:text="@string/faculty"
                android:textAlignment="center"
                android:textSize="12sp"
                android:textColor="#fff"
                />
        </LinearLayout>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>